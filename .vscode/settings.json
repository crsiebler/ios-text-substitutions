{
    "cSpell.words": [
        "Gboard",
        "pysubstitutor",
        "pytest",
        "PYTHONPATH"
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true, // Automatically sort imports
        "source.fixAll": true          // Automatically fix linting issues
    },
    "python.linting.enabled": false,       // Disable linting
    "python.formatting.provider": "black", // Use Black for code formatting
    "python.sortImports.args": ["--profile", "black"] // Use Black-compatible isort
}
